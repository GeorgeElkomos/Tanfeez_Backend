{
  "info": {
    "name": "Approval APIs",
    "_postman_id": "approval-apis-collection",
    "description": "Collection of all Approval Workflow APIs.\n\n// Includes:\n// - Workflow Template CRUD\n// - Stage Template CRUD\n// - Details endpoint\n// Examples are provided in request bodies.\n",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Workflow Templates",
      "item": [
        {
          "name": "Get All Workflow Templates",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/workflow-templates/",
              "host": ["{{base_url}}"],
              "path": ["workflow-templates", ""]
            },
            "description": "// Returns all workflow templates with their stages (read-only)"
          }
        },
        {
          "name": "Get One Workflow Template",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/workflow-templates/1/",
              "host": ["{{base_url}}"],
              "path": ["workflow-templates", "1", ""]
            },
            "description": "// Returns workflow template with ID = 1\n// Includes nested stages"
          }
        },
        {
          "name": "Get Workflow Template Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/workflow-templates/1/details/",
              "host": ["{{base_url}}"],
              "path": ["workflow-templates", "1", "details", ""]
            },
            "description": "// Custom endpoint that returns details of workflow template ID = 1\n// Same as GET one, but reserved for future extensions"
          }
        },
        {
          "name": "Create Workflow Template (with stages)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"FAR_WF_01\",\n  \"transfer_type\": \"FAR\",\n  \"name\": \"FAR Workflow V1\",\n  \"description\": \"Approval flow for FAR transfers\",\n  \"version\": 1,\n  \"is_active\": true,\n  \"stages\": [\n    {\n      \"order_index\": 1,\n      \"name\": \"Manager Approval\",\n      \"decision_policy\": \"ALL\",\n      \"allow_reject\": true,\n      \"sla_hours\": 24\n    },\n    {\n      \"order_index\": 2,\n      \"name\": \"Finance Approval\",\n      \"decision_policy\": \"ANY\",\n      \"allow_reject\": true,\n      \"sla_hours\": 48\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/workflow-templates/",
              "host": ["{{base_url}}"],
              "path": ["workflow-templates", ""]
            },
            "description": "// Creates a workflow template and its stages in one request"
          }
        },
        {
          "name": "Update Workflow Template (bulk stages update)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"FAR_WF_01\",\n  \"transfer_type\": \"FAR\",\n  \"name\": \"Updated Workflow\",\n  \"description\": \"Modified description\",\n  \"version\": 2,\n  \"is_active\": true,\n  \"stages\": [\n    {\n      \"id\": 1,\n      \"order_index\": 1,\n      \"name\": \"Manager Approval (Updated)\",\n      \"decision_policy\": \"ALL\",\n      \"sla_hours\": 12\n    },\n    {\n      \"order_index\": 2,\n      \"name\": \"Finance Approval (New)\",\n      \"decision_policy\": \"ANY\",\n      \"sla_hours\": 48\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/workflow-templates/1/",
              "host": ["{{base_url}}"],
              "path": ["workflow-templates", "1", ""]
            },
            "description": "// Updates workflow template ID = 1\n// - Updates stage with ID 1\n// - Creates new stage (order_index 2)\n// - Deletes stages not listed"
          }
        },
        {
          "name": "Delete Workflow Template",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/workflow-templates/1/",
              "host": ["{{base_url}}"],
              "path": ["workflow-templates", "1", ""]
            },
            "description": "// Deletes workflow template with ID = 1 (and cascades stages)"
          }
        }
      ]
    },
    {
      "name": "Stage Templates",
      "item": [
        {
          "name": "Get All Stage Templates",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/stage-templates/",
              "host": ["{{base_url}}"],
              "path": ["stage-templates", ""]
            },
            "description": "// Returns all stage templates"
          }
        },
        {
          "name": "Get One Stage Template",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/stage-templates/1/",
              "host": ["{{base_url}}"],
              "path": ["stage-templates", "1", ""]
            },
            "description": "// Returns stage template with ID = 1"
          }
        },
        {
          "name": "Create Stage Template (standalone)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"workflow_template\": 1,\n  \"order_index\": 3,\n  \"name\": \"Director Approval\",\n  \"decision_policy\": \"ALL\",\n  \"allow_reject\": true,\n  \"sla_hours\": 72\n}"
            },
            "url": {
              "raw": "{{base_url}}/stage-templates/",
              "host": ["{{base_url}}"],
              "path": ["stage-templates", ""]
            },
            "description": "// Creates a new stage directly (must specify workflow_template ID)"
          }
        },
        {
          "name": "Update Stage Template (direct)",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Director Approval (Updated)\",\n  \"sla_hours\": 48\n}"
            },
            "url": {
              "raw": "{{base_url}}/stage-templates/3/",
              "host": ["{{base_url}}"],
              "path": ["stage-templates", "3", ""]
            },
            "description": "// Updates only the given fields of stage template ID = 3"
          }
        },
        {
          "name": "Delete Stage Template",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/stage-templates/3/",
              "host": ["{{base_url}}"],
              "path": ["stage-templates", "3", ""]
            },
            "description": "// Deletes stage template with ID = 3"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api"
    }
  ]
}
